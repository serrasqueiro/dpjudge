if 'forgot' in vars(page):
	page.dppd.db.execute(
		"""
		select User.status, password from User, Email
		where User.id = Email.userId and Email.address = '%s'
		""" % page.email)
	data = page.dppd.db.fetchone()
	if data:
		mail = Mail(page.email, 'DPPD Password Reminder', None, host.dppd)
		what, reminder = 'password', data['password']
		if data['status'] == 'PENDING':
			what = 'registration confirmation number'
			reminder = reminder.split('/')[0]
		mail.write('Your DPjudge %s is: %s\n' % (what, reminder or '(blank)'))
		mail.close()
		alert = "Password reminder sent."
	else: alert = 'No such DPjudge player - %s' % page.email
	page.write(
		"""
		<script>
		alert("%s");
		window.history.back();
		</script>
		""" % alert)
	raise SystemExit

